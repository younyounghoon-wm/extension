{
  "manifest_version": 3,
  "name": "hoon-extension",
  "version": "1.0",
  "description": "hoon first extension sssã„´",
  "action": {
    "default_popup": "index.html",
    "default_title": "hoon",
    "default_icon": "./images/hoon_icon.png"
  },
  "background": {
    "service_worker": "./background.js",
    "type": "module"
  },
  "permissions": ["notifications"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./scripts/content.js"]
    }
  ]
}
